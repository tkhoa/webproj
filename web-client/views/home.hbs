<!-- HERO SECTION-->
<div class="container">
    <div class="row d-flex justify-content-center">
        <section class="hero pb-3 bg-center  mt-4 d-flex align-items-end"
            style="background: url(img/title.jpg); background-size: contain; width: 70%; background-repeat: no-repeat;">
            <div class="container py-5">
                <div class="row px-4 px-lg-5">
                    <div class="col-lg-6">
                        <h1 class="h3 text-uppercase mb-3 text-white">Collect cards together</h1><a
                            class="btn btn-secondary" href="shop.html">Let's go</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- TRENDING PRODUCTS-->
    <section class="py-5">
        <header>
            <p class="small text-white small text-uppercase mb-1">Made the hard way</p>
            <h2 class="h5 text-uppercase mb-4 text-white">Top trending Cards</h2>
        </header>
        <div class="row">
            <!-- PRODUCT-->
            {{#each cards}}
            <div class="col-xl-3 col-lg-4 col-sm-6">
                <div class="product text-center" style="width: 80%;">
                    <div class="position-relative mb-3 d-flex justify-content-center">
                        <div class="badge text-white bg-danger">New</div>
                        {{!-- <div class="badge text-white badge-primary">Sale</div><a class="d-block"
                            href="detail.html"><img class="img-fluid w-100" src="img/product-2.jpg" alt="..."></a> --}}
                        <div class="badge text-white badge-"></div><a class="d-block" href="detail.html"><img
                                class="img-fluid w-100" src="/img/{{image}}" alt="{{name}}"></a>
                        <div class="product-overlay">
                            <ul class="mb-0 list-inline">
                                {{!-- <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-outline-dark"
                                        href="#"><i class="far fa-heart"></i></a></li> --}}
                                <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-dark" href="cart.html">Add
                                        to cart</a></li>
                                {{!-- <li class="list-inline-item mr-0"><a class="btn btn-sm btn-outline-dark"
                                        href="#productView" data-toggle="modal"><i class="fas fa-expand"></i></a>
                                </li> --}}
                            </ul>
                        </div>
                    </div>
                    <h6> <a class="reset-anchor" href="/detail/{{_id}}">{{name}}</a></h6>
                    <p class="text-white">${{price}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</div>
